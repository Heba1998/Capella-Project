<!DOCTYPE html>
<html>
<head>
  <title>Booking.com @ViewBag.Title</title>
  <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
  <div class="row">
    <header class="container-fluid">
    </header>
    <section class="container">
      <h2 class="text-center">@ViewBag.Title</h2>
      @RenderBody()
    </section>
    <footer class="container">
      <div class="text-center">Copyright 2022</div>
    </footer>
  </div>
  <script src="~/lib/jquery/dist/jquery.min.js"></script>
  <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script src="~/lib/fortawesome/fontawesome-free/js/fontawesome.js"></script>
  <script src="~/lib/fortawesome/fontawesome-free/js/solid.js"></script>
  <script src="~/js/index.js"></script>
  @RenderSection("scripts", false)
</body>
</html> 